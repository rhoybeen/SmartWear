<resources>
    <!-- Preference styles -->
    <eat-comment/>

    <style name="Preference"/>
    <style name="PreferenceFragment"/>
    <style name="PreferenceActivity"/>

    <style name="Preference.Ticwear">
        <item name="android:layout">@layout/preference_ticwear</item>
    </style>

    <style name="PreferenceFragment.Ticwear">
        <item name="android:layout">@layout/preference_list_fragment</item>
        <item name="android:paddingStart">@dimen/preference_fragment_padding_side_ticwear</item>
        <item name="android:paddingEnd">@dimen/preference_fragment_padding_side_ticwear</item>
    </style>

    <style name="PreferenceActivity.Ticwear">
        <item name="android:layout">@layout/preference_list_content</item>
        <item name="tic_headerLayout">@layout/preference_ticwear</item>
        <item name="tic_headerRemoveIconIfEmpty">true</item>
    </style>

    <style name="Preference.Ticwear.Information">
        <item name="android:layout">@layout/preference_information_ticwear</item>
        <item name="android:enabled">false</item>
        <item name="android:shouldDisableView">false</item>
    </style>

    <style name="Preference.Ticwear.Centered">
        <item name="android:layout">@layout/preference_centered_ticwear</item>
    </style>

    <!--<style name="Preference.Ticwear.Category">-->
    <!--<item name="tic_layout">@layout/preference_category_material</item>-->
    <!--&lt;!&ndash; The title should not dim if the category is disabled, instead only the preference children should dim. &ndash;&gt;-->
    <!--<item name="tic_shouldDisableView">false</item>-->
    <!--<item name="tic_selectable">false</item>-->
    <!--</style>-->

    <style name="Preference.Ticwear.CheckBoxPreference">
        <item name="android:widgetLayout">@layout/preference_widget_checkbox</item>
    </style>

    <style name="Preference.Ticwear.VolumePreference">
        <item name="android:layout">@layout/preference_volume</item>
    </style>

    <style name="Preference.Ticwear.SwitchPreference">
        <item name="android:widgetLayout">@layout/preference_widget_switch</item>
        <item name="android:switchTextOn">@string/capital_on</item>
        <item name="android:switchTextOff">@string/capital_off</item>
    </style>

    <style name="Preference.Ticwear.PreferenceScreen">
        <item name="android:widgetLayout">@layout/preference_widget_enter</item>
    </style>

    <style name="Preference.Ticwear.DialogPreference">
        <item name="android:widgetLayout">@layout/preference_widget_enter</item>
        <item name="tic_positiveButtonIcon">@drawable/tic_ic_btn_ok</item>
        <item name="tic_negativeButtonIcon">@drawable/tic_ic_btn_cancel</item>
    </style>

    <!--<style name="Preference.Ticwear.DialogPreference.EditTextPreference">-->
    <!--<item name="tic_dialogLayout">@layout/preference_dialog_edittext_material</item>-->
    <!--</style>-->

    <style name="Preference.Ticwear.RingtonePreference">
        <item name="android:widgetLayout">@layout/preference_widget_enter</item>
        <item name="android:ringtoneType">ringtone</item>
        <item name="android:showSilent">true</item>
        <item name="android:showDefault">true</item>
    </style>

    <!-- No margins or background by default. Could be different for x-large screens -->
    <style name="PreferencePanel"/>
    <style name="PreferencePanel.Ticwear">
        <item name="android:layout_marginStart">0dip</item>
        <item name="android:layout_marginEnd">0dip</item>
    </style>

    <style name="PreferenceHeaderPanel"/>
    <style name="PreferenceHeaderPanel.Ticwear">
        <item name="android:layout_marginStart">@dimen/preference_screen_side_margin_ticwear</item>
        <item name="android:layout_marginEnd">@dimen/preference_screen_side_margin_negative_ticwear</item>
        <item name="android:paddingTop">@dimen/preference_screen_header_vertical_padding_ticwear</item>
        <item name="android:paddingBottom">@dimen/preference_screen_header_vertical_padding_ticwear</item>
    </style>

    <style name="PreferenceHeaderList.Ticwear" parent="Widget.Ticwear.ListView">
        <item name="android:paddingStart">@dimen/preference_screen_header_padding_side_ticwear</item>
        <item name="android:paddingEnd">@dimen/preference_screen_header_padding_side_ticwear</item>
        <item name="android:scrollbarStyle">@integer/preference_screen_header_scrollbarStyle_ticwear</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
    </style>

    <style name="PreferenceFragmentList.Ticwear" parent="PreferenceHeaderList.Ticwear">
        <item name="android:paddingStart">@dimen/preference_fragment_padding_side_ticwear</item>
        <item name="android:paddingEnd">@dimen/preference_fragment_padding_side_ticwear</item>
    </style>

</resources>