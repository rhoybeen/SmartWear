<resources>

    <style name="Widget.Ticwear.CollapsingToolbar" parent="android:Widget">
        <item name="tic_expandedTitleMargin">32dp</item>
        <item name="tic_statusBarScrim">?android:colorPrimaryDark</item>
    </style>

    <style name="Widget.Ticwear.AppBarLayout" parent="android:Widget">
        <item name="android:elevation">@dimen/tic_design_appbar_elevation</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.Ticwear.CoordinatorLayout" parent="android:Widget">
        <item name="tic_statusBarBackground">?android:colorPrimaryDark</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarSize">0dp</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <style name="TextAppearance.Ticwear.CollapsingToolbar.Expanded" parent="android:TextAppearance.Material.Display1">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

</resources>

