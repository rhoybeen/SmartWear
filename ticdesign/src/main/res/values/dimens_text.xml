    <dimen name="tic_text_size_body_1_ticwear">@dimen/tic_text_size_small_1</dimen>
    <dimen name="tic_text_size_body_2_ticwear">@dimen/tic_text_size_small_1</dimen>
    <dimen name="tic_text_size_caption_ticwear">@dimen/tic_text_size_extra_small</dimen>
    <dimen name="tic_text_size_button_ticwear">@dimen/tic_text_size_small_1</dimen>

    <dimen name="tic_text_size_large_ticwear">@dimen/tic_text_size_large_1</dimen>
